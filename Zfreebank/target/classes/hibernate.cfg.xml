<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Configurações de Conexão com o Banco de Dados -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/zfreebank</property>
		<property name="connection.username">root</property>
		<property name="connection.password">zaa123</property>

		<!-- Pool de Conexões -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>

		<!-- Gerenciamento do Contexto das Sessões -->
		<property name="current_session_context_class">thread</property>

		<!-- Cache de Segundo Nível -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Mostra as SQLs Geradas -->
		<property name="show_sql">true</property>

		<!-- Cria as tabelas do banco de dados -->
		<property name="hbm2ddl.auto">create</property>

		<!-- Mapeamento das tabelas -->
		<mapping class="com.zfreebank.pacotedominios.Estados" />
		<mapping class="com.zfreebank.pacotedominios.Cidades" />
		<mapping class="com.zfreebank.pacotedominios.Produtos" />
		<mapping class="com.zfreebank.pacotedominios.Fornecedores" />
		<mapping class="com.zfreebank.pacotedominios.Clientes" />
		<mapping class="com.zfreebank.pacotedominios.Funcionarios" />
		<mapping class="com.zfreebank.pacotedominios.Pessoas" />
		<mapping class="com.zfreebank.pacotedominios.Usuarios" />

	</session-factory>

</hibernate-configuration>
